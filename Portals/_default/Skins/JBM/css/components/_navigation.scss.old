/* category navigation styles *//*
.category-nav {
  @include clear-list;

  li {
    @include media('<desktop') {
      font-size: 13px;
      line-height: 18px;
    }
    @include media('<tablet') {
      font-size: 12px;
      line-height: 16px;
    }
    &+li{
      border-top: 1px solid $gray-200;
    }
  }
}


